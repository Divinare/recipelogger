<%# add navigation links to this file %>
<li><%= link_to 'Recipes', recipes_path %></li>
<li><%= link_to 'Categories', categories_path %></li>
<li><%= link_to 'Ratings', ratings_path %></li>
<li><%= link_to 'Users', users_path %></li>

<% if not current_user.nil? %>

    <li class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">
        <%= current_user.username %> <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to current_user.username, current_user%></li>
        <li><%= link_to 'Rate a recipe', new_rating_path %></li>
        <li><%= link_to 'Signout', signout_path %></li>
      </ul>
    </li>
<% else %>
    <li><%= link_to 'Signin', signin_path %></li>
    <li><%= link_to 'Signup', signup_path %></li>
<% end %>