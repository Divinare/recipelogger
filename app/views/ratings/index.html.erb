<h1>Listing ratings</h1>

<div class="col-md-6">
  <h3>Recent ratings</h3>
  <ul>
    <% Rating.recent.each do |rating| %>
        <li><strong style="font-size:15px;"> <%= rating.score %> <%= rating.recipe.name %> by <%= rating.user.username %> </strong></li>
    <% end %>
  </ul>
</div>

<br>

<%= link_to 'New Rating', new_rating_path %>
